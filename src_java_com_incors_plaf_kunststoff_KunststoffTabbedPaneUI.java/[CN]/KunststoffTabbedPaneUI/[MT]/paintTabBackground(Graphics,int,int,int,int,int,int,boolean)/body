{
  if (isSelected) {
    g.setColor(UIManager.getColor("TabbedPane.selected"));
  }
 else {
    g.setColor(tabPane.getBackgroundAt(tabIndex));
  }
switch (tabPlacement) {
case LEFT:
    g.fillRect(x + 1,y + 1,w - 2,h - 3);
  break;
case RIGHT:
g.fillRect(x,y + 1,w - 2,h - 3);
break;
case BOTTOM:
g.fillRect(x + 1,y,w - 3,h - 1);
break;
case TOP:
default :
g.fillRect(x + 1,y + 1,w - 3,h - 1);
}
}
