{
  stopFetching=false;
  try {
    List<String> citations=getCitations(query);
    if (citations == null) {
      return false;
    }
    if (citations.size() == 0) {
      status.showMessage(Globals.lang("No entries found for the search string '%0'",query),Globals.lang("Search ScienceDirect"),JOptionPane.INFORMATION_MESSAGE);
      return false;
    }
    int i=0;
    for (    String cit : citations) {
      if (stopFetching) {
        break;
      }
      BibtexEntry entry=BibsonomyScraper.getEntry(cit);
      if (entry != null) {
        dialog.addEntry(entry);
      }
      dialog.setProgress(++i,citations.size());
    }
    return true;
  }
 catch (  IOException e) {
    e.printStackTrace();
    status.showMessage(Globals.lang("Error while fetching from ScienceDirect") + ": " + e.getMessage());
  }
  return false;
}
