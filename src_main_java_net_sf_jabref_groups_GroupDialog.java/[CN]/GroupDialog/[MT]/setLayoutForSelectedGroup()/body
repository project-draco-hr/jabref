{
  if (m_explicitRadioButton.isSelected())   m_optionsLayout.show(m_optionsPanel,String.valueOf(INDEX_EXPLICITGROUP));
 else   if (m_keywordsRadioButton.isSelected())   m_optionsLayout.show(m_optionsPanel,String.valueOf(INDEX_KEYWORDGROUP));
 else   if (m_searchRadioButton.isSelected())   m_optionsLayout.show(m_optionsPanel,String.valueOf(INDEX_SEARCHGROUP));
}
