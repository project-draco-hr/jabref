{
  String filenm=file.getName();
  if (!specific)   return (filenm.endsWith(".bib") || file.isDirectory() || filenm.endsWith(".dat")|| filenm.endsWith(".txt")|| filenm.endsWith(".ris")|| filenm.endsWith(".ref")|| filenm.endsWith(".fcgi")|| filenm.endsWith(".bibx")|| filenm.endsWith(".xml"));
 else   return (filenm.endsWith(filetype) || file.isDirectory());
}
