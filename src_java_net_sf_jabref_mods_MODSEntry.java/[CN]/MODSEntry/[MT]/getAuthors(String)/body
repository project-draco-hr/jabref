{
  List<PersonName> result=new LinkedList<PersonName>();
  LayoutFormatter chars=new XMLChars();
  if (authors.indexOf(" and ") == -1) {
    if (CHARFORMAT)     result.add(new PersonName(chars.format(authors)));
 else     result.add(new PersonName(authors));
  }
 else {
    String[] names=authors.split(" and ");
    for (int i=0; i < names.length; i++) {
      if (CHARFORMAT)       result.add(new PersonName(chars.format(names[i])));
 else       result.add(new PersonName(names[i]));
    }
  }
  return result;
}
