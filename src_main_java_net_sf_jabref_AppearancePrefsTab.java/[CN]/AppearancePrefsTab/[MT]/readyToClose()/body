{
  try {
    Integer.parseInt(fontSize.getText());
  }
 catch (  NumberFormatException ex) {
    JOptionPane.showMessageDialog(null,Globals.lang("You must enter an integer value in the text field for") + " '" + Globals.lang("Menu and label font size")+ "'",Globals.lang("Changed font settings"),JOptionPane.ERROR_MESSAGE);
    return false;
  }
  return true;
}
