{
  colorCodes.setSelected(_prefs.getBoolean("tableColorCodesOn"));
  fontSize.setText("" + _prefs.getInt("menuFontSize"));
  rowPadding.setText("" + _prefs.getInt("tableRowPadding"));
  oldMenuFontSize=_prefs.getInt("menuFontSize");
