{
  Globals.prefs.putBoolean(JabRefPreferences.SEARCH_MODE_FLOAT,modeFloat.isSelected());
  Globals.prefs.putBoolean(JabRefPreferences.SEARCH_MODE_LIVE_FILTER,modeLiveFilter.isSelected());
