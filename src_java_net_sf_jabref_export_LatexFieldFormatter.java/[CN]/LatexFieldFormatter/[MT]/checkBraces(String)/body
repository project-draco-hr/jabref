{
  Vector<Integer> left=new Vector<Integer>(5,3), right=new Vector<Integer>(5,3);
  int current=-1;
  while ((current=text.indexOf('{',current + 1)) != -1)   left.add(current);
  while ((current=text.indexOf('}',current + 1)) != -1)   right.add(current);
  if ((right.size() > 0) && (left.size() == 0))   throw new IllegalArgumentException("'}' character ends string prematurely.");
  if ((right.size() > 0) && (right.elementAt(0) < left.elementAt(0)))   throw new IllegalArgumentException("'}' character ends string prematurely.");
  if (left.size() != right.size())   throw new IllegalArgumentException("Braces don't match.");
}
