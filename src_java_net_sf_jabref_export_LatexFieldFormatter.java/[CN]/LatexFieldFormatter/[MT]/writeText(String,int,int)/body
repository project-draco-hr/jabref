{
  sb.append(Globals.getOpeningBrace());
  boolean escape=false;
  char c;
  for (int i=start_pos; i < end_pos; i++) {
    c=text.charAt(i);
    if ((c == '&') && !escape)     sb.append("\\&");
 else     sb.append(c);
    if (c == '\\')     escape=true;
 else     escape=false;
  }
  sb.append(Globals.getClosingBrace());
}
