{
  if (getBoolean(MEMORY_STICK_MODE)) {
    try {
      exportPreferences("jabref.xml");
    }
 catch (    IOException e) {
      Globals.logger("Could not save preferences for memory stick mode: " + e.getLocalizedMessage());
    }
  }
  try {
    prefs.flush();
  }
 catch (  BackingStoreException ex) {
    ex.printStackTrace();
  }
}
