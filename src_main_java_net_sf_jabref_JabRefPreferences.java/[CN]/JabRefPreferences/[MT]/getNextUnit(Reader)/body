{
  int c=-1;
  boolean escape=false;
  boolean done=false;
  StringBuilder res=new StringBuilder();
  while (!done && ((c=data.read()) != -1)) {
    if (c == '\\') {
      if (!escape) {
        escape=true;
      }
 else {
        escape=false;
        res.append('\\');
      }
    }
 else {
      if (c == ';') {
        if (!escape) {
          done=true;
        }
 else {
          res.append(';');
        }
      }
 else {
        res.append((char)c);
      }
      escape=false;
    }
  }
  if (res.length() > 0) {
    return res.toString();
  }
 else   if (c == -1) {
    return null;
  }
 else {
    return "";
  }
}
