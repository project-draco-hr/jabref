{
  int score=0;
  if (fields != null) {
    for (int i=0; i < fields.length; i++) {
      try {
        Object value=bibtexEntry.getField((String)fields[i]);
        if (value != null) {
          if (pattern.matcher(removeBrackets.format((String)value)).matches()) {
            score++;
          }
        }
      }
 catch (      Throwable t) {
        System.err.println("Searching error: " + t);
      }
    }
  }
  return score;
}
