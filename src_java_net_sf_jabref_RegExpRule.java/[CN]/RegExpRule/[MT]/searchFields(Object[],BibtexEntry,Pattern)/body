{
  int score=0;
  if (fields != null) {
    for (int i=0; i < fields.length; i++) {
      try {
        if (pattern.matcher(String.valueOf(bibtexEntry.getField(fields[i].toString()))).matches()) {
          score++;
        }
      }
 catch (      Throwable t) {
        System.err.println("Searching error: " + t);
      }
    }
  }
  return score;
}
