{
  try {
    ServerSocket socket=new ServerSocket(Globals.prefs.getInt("remoteServerPort"),1,InetAddress.getByAddress(new byte[]{127,0,0,1}));
    RemoteListener listener=new RemoteListener(jabref,socket);
    return listener;
  }
 catch (  IOException e) {
    if (!e.getMessage().startsWith("Address already in use"))     e.printStackTrace();
    return null;
  }
}
