{
  if (e.isPopupTrigger()) {
    if (field != null) {
      field.requestFocus();
      String txt=field.getSelectedText();
      boolean cStat=false;
      if ((txt != null) && !txt.isEmpty()) {
        cStat=true;
      }
      copyAct.setEnabled(cStat);
      inputMenu.show(e.getComponent(),e.getX(),e.getY());
    }
  }
}
