{
  int[] sel=table.getSelectedRows();
  if (sel.length > 0) {
    assureNotEditing();
    String msg="Really delete the selected " + ((sel.length > 1) ? sel.length + " entries?" : "entry?");
    int answer=JOptionPane.showConfirmDialog(parent,msg,"Delete strings",JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE);
    if (answer == JOptionPane.YES_OPTION) {
      CompoundEdit ce=new CompoundEdit();
      for (int i=sel.length - 1; i >= 0; i--) {
        ce.addEdit(new UndoableRemoveString(panel,base,base.getString(sel[i]),sel[i]));
        base.removeString(sel[i]);
      }
      ce.end();
      panel.undoManager.addEdit(ce);
      table.revalidate();
      if (base.getStringCount() > 0)       table.setRowSelectionInterval(0,0);
      table.repaint();
      panel.markBaseChanged();
    }
  }
}
