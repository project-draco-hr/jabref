{
  BasePanel bp=basePanel();
  if (bp == null) {
    setTitle(GUIGlobals.frameTitle);
    return;
  }
  String star=bp.baseChanged ? "*" : "";
  if (bp.getFile() != null) {
    setTitle(GUIGlobals.frameTitle + " - " + bp.getFile().getPath()+ star);
  }
 else {
    setTitle(GUIGlobals.frameTitle + " - " + Globals.lang("untitled")+ star);
  }
}
