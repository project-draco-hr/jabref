{
  JMenu file=new JMenu(Globals.lang("File")), edit=new JMenu(Globals.lang("Edit")), bibtex=new JMenu(Globals.lang("BibTeX")), view=new JMenu(Globals.lang("View")), tools=new JMenu(Globals.lang("Tools")), options=new JMenu(Globals.lang("Options")), newSpec=new JMenu(Globals.lang("New entry..."));
  file.add(newDatabaseAction);
  file.add(open);
  file.add(save);
  file.add(saveAs);
  file.addSeparator();
  file.add(close);
  mb.add(file);
  edit.add(undo);
  edit.add(redo);
  edit.addSeparator();
  edit.add(cut);
  edit.add(copy);
  edit.add(paste);
  edit.add(selectAll);
  mb.add(edit);
  view.add(toggleGroups);
  mb.add(view);
  bibtex.add(newEntryAction);
  for (int i=0; i < newSpecificEntryAction.length; i++)   newSpec.add(newSpecificEntryAction[i]);
  bibtex.add(newSpec);
  bibtex.addSeparator();
  bibtex.add(editPreamble);
  bibtex.add(editStrings);
  mb.add(bibtex);
  mb.add(tools);
  options.add(showPrefs);
  options.add(selectKeys);
  mb.add(options);
}
