{
  JMenu file=new JMenu(Globals.lang("File")), edit=new JMenu(Globals.lang("Edit")), bibtex=new JMenu(Globals.lang("Bibtex"));
  file.add(newDatabaseAction);
  file.add(open);
  file.add(save);
  file.add(saveAs);
  file.addSeparator();
  file.add(close);
  mb.add(file);
  edit.add(undo);
  edit.add(redo);
  mb.add(edit);
  bibtex.add(editPreamble);
  mb.add(bibtex);
}
