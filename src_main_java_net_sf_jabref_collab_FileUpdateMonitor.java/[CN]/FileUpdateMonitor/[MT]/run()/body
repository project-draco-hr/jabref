{
  while (true) {
    Iterator<String> i=entries.keySet().iterator();
    for (; i.hasNext(); ) {
      Entry e=entries.get(i.next());
      try {
        if (e.hasBeenUpdated()) {
          e.notifyListener();
        }
      }
 catch (      IOException ex) {
        e.notifyFileRemoved();
      }
    }
    try {
      Thread.sleep(WAIT);
    }
 catch (    InterruptedException ex) {
      LOGGER.info("FileUpdateMonitor has been interrupted. Terminating...",ex);
      return;
    }
  }
}
