{
  while (true) {
    for (    Entry e : entries.values()) {
      try {
        if (e.hasBeenUpdated()) {
          e.notifyListener();
        }
      }
 catch (      IOException ex) {
        e.notifyFileRemoved();
      }
    }
    try {
      Thread.sleep(WAIT);
    }
 catch (    InterruptedException ex) {
      LOGGER.debug("FileUpdateMonitor has been interrupted. Terminating...");
      return;
    }
  }
}
