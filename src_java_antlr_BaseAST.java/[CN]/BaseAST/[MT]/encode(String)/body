{
  char c;
  StringBuffer n=new StringBuffer();
  for (int i=0; i < text.length(); i++) {
    c=text.charAt(i);
switch (c) {
case '&':
{
        n.append("&amp;");
        break;
      }
case '<':
{
      n.append("&lt;");
      break;
    }
case '>':
{
    n.append("&gt;");
    break;
  }
case '"':
{
  n.append("&quot;");
  break;
}
case '\'':
{
n.append("&apos;");
break;
}
default :
{
n.append(c);
break;
}
}
}
return new String(n);
}
