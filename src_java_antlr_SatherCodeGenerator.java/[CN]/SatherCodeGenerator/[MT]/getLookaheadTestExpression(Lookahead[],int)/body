{
  StringBuffer e=new StringBuffer(100);
  boolean first=true;
  e.append("(");
  for (int i=1; i <= k; i++) {
    BitSet p=look[i].fset;
    if (!first) {
      e.append(") and (");
    }
    first=false;
    if (look[i].containsEpsilon()) {
      e.append("true");
    }
 else {
      e.append(getLookaheadTestTerm(i,p));
    }
  }
  e.append(")");
  return e.toString();
}
