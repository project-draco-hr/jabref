  grabB.addKeyListener(new JBM_CustomKeyBindingsListener());
  buttonBox.add(grabB);
  buttonBox.add(defB);
  buttonBox.add(ok);
  buttonBox.add(cancel);
  getContentPane().add(buttonBox,BorderLayout.SOUTH);
  setTop();
