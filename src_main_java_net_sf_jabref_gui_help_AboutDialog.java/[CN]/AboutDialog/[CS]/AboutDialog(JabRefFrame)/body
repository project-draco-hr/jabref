{
  super(Objects.requireNonNull(bf),Localization.lang("About JabRef"),true);
  setSize(new Dimension(750,600));
  setLocationRelativeTo(null);
  JPanel panel=new JPanel();
  panel.setLayout(new GridLayout());
  JTextPane textArea=new JTextPane();
  textArea.setEditable(false);
  textArea.setCursor(null);
  textArea.setOpaque(false);
  textArea.setFocusable(false);
  StyledDocument doc=textArea.getStyledDocument();
  SimpleAttributeSet center=new SimpleAttributeSet();
  StyleConstants.setAlignment(center,StyleConstants.ALIGN_CENTER);
  doc.setParagraphAttributes(0,doc.getLength(),center,false);
  panel.add(new JScrollPane(textArea));
  String text=String.format("JabRef %s%n2003-%s%n%s%n%s%n%nDevelopers: %s%n%nAuthors: %s%n%nExternal Libraries: %s%nCode: %s",Globals.BUILD_INFO.getVersion(),Globals.BUILD_INFO.getYear(),"http://www.jabref.org","GNU General Public License v2 or later",Globals.BUILD_INFO.getDevelopers(),Globals.BUILD_INFO.getAuthors(),"https://github.com/JabRef/jabref/blob/master/external-libraries.txt","https://github.com/JabRef/jabref");
  textArea.setText(text);
  getContentPane().add(panel);
}
