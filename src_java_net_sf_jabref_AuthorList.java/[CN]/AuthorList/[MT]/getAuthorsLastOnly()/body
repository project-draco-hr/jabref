{
  StringBuilder res=new StringBuilder();
  if (size() > 0) {
    res.append(getAuthor(0).getLast());
    int i=1;
    while (i < size() - 1) {
      res.append(", ");
      res.append(getAuthor(i).getLast());
      i++;
    }
    ;
    if (size() > 2)     res.append(",");
    if (size() > 1) {
      res.append(" and ");
      res.append(getAuthor(i).getLast());
    }
  }
  ;
  return res.toString();
}
