{
  AuthorList al=AuthorList.getAuthorList(authorField);
  if (al.size() == 0)   return "";
  String s=al.getAuthor(0).getVon();
  StringBuilder sb=new StringBuilder();
  if (s != null) {
    sb.append(s);
    sb.append(' ');
  }
  s=al.getAuthor(0).getLast();
  if (s != null)   sb.append(s);
  return sb.toString();
}
