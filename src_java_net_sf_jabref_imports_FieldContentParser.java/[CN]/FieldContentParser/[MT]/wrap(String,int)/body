{
  String[] lines=in.split("\n");
  StringBuffer res=new StringBuffer();
  addWrappedLine(res,lines[0],wrapAmount);
  for (int i=1; i < lines.length; i++) {
    if (!lines[i].trim().equals("")) {
      res.append("\n\t\n\t");
      addWrappedLine(res,lines[i],wrapAmount);
    }
 else     res.append("\n\t");
  }
  return res.toString();
}
