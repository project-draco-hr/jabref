{
  filesToOpen.clear();
  final MergeDialog md=new MergeDialog(frame,Globals.lang("Append database"),true);
  Util.placeDialog(md,panel);
  md.setVisible(true);
  if (md.isOkPressed()) {
    String[] chosen=FileDialogs.getMultipleFiles(frame,new File(Globals.prefs.get("workingDirectory")),null,false);
    if (chosen == null)     return;
    for (int i=0; i < chosen.length; i++)     filesToOpen.add(new File(chosen[i]));
    (new Thread(){
      public void run(){
        openIt(md.importEntries(),md.importStrings(),md.importGroups(),md.importSelectorWords());
      }
    }
).start();
  }
}
