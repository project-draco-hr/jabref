{
  String chosen=null;
  if (dir)   chosen=Globals.getNewDir(frame,new File(comp.getText()),Globals.NONE,JFileChooser.OPEN_DIALOG,false);
 else   chosen=Globals.getNewFile(frame,new File(comp.getText()),Globals.NONE,JFileChooser.OPEN_DIALOG,false);
  if (chosen != null) {
    File newFile=new File(chosen);
    comp.setText(newFile.getPath());
  }
}
