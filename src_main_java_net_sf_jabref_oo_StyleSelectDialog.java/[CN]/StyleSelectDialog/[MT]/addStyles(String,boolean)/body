{
  File dirF=new File(dir);
  if (dirF.isDirectory()) {
    File[] files=dirF.listFiles();
    for (    File file : files) {
      if (!file.isDirectory() && (file.getName().endsWith(STYLE_FILE_EXTENSION))) {
        addSingleFile(file);
      }
 else       if (file.isDirectory() && recurse) {
        addStyles(file.getPath(),recurse);
      }
    }
  }
 else {
    addSingleFile(dirF);
  }
}
