{
  StringBuffer buf=new StringBuffer();
  if (fileName != null)   buf.append(fileName + ":");
  if (line != -1) {
    if (fileName == null)     buf.append("line ");
    buf.append(line);
    if (column != -1)     buf.append(":" + column);
    buf.append(":");
  }
  buf.append(" ");
  return buf.toString();
}
