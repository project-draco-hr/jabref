{
  String title;
  if (file == null) {
    title=Globals.lang(GUIGlobals.untitledTitle);
    if (!bp.database().getEntries().isEmpty()) {
      title=title + "*";
    }
  }
 else {
    title=file.getName();
  }
  tabbedPane.add("<html><div style='padding:2px 5px;'>" + title + "</div></html>",bp);
  tabbedPane.setToolTipTextAt(tabbedPane.getTabCount() - 1,file != null ? file.getAbsolutePath() : null);
  if (raisePanel) {
    tabbedPane.setSelectedComponent(bp);
  }
}
