{
  String plannedName=bibtexKey;
  if (!suffix.isEmpty()) {
    plannedName+="." + suffix;
  }
  if (OS.WINDOWS) {
    plannedName=plannedName.replaceAll("\\?|\\*|\\<|\\>|\\||\\\"|\\:|\\.$|\\[|\\]","");
  }
 else   if (OS.OS_X) {
    plannedName=plannedName.replaceAll(":","");
  }
  return plannedName;
}
