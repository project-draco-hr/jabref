{
  table.clearSelection();
  List<OOBibStyle> styleList=new ArrayList<>();
  if (!styleDir.getText().isEmpty()) {
    new OpenOfficeFileSearch(Globals.journalAbbreviationLoader.getRepository()).addStyles(styleDir.getText(),true,Globals.prefs.getDefaultEncoding(),styleList);
  }
  styles.getReadWriteLock().writeLock().lock();
  styles.clear();
  styles.addAll(styleList);
  styles.getReadWriteLock().writeLock().unlock();
  selectLastUsed();
}
