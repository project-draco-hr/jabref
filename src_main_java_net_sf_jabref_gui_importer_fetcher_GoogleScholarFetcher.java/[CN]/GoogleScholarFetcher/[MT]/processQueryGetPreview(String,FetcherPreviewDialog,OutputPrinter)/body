{
  entryLinks.clear();
  stopFetching=false;
  try {
    Map<String,JLabel> citations=getCitations(query);
    if (!citations.isEmpty()) {
      for (      Map.Entry<String,JLabel> linkEntry : citations.entrySet()) {
        preview.addEntry(linkEntry.getKey(),linkEntry.getValue());
      }
      return true;
    }
    status.showMessage(Localization.lang("No entries found for the search string '%0'",query),Localization.lang("Search %0",getTitle()),JOptionPane.INFORMATION_MESSAGE);
  }
 catch (  IOException e) {
    LOGGER.error("Error while fetching from " + getTitle(),e);
    preview.showErrorMessage(this.getTitle(),e.getLocalizedMessage());
  }
  return false;
}
