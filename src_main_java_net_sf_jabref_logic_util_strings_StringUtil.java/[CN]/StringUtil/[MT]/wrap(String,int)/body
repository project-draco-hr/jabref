{
  String[] lines=in.split("\n");
  StringBuilder result=new StringBuilder();
  addWrappedLine(result,CharMatcher.WHITESPACE.trimTrailingFrom(lines[0]),wrapAmount);
  for (int i=1; i < lines.length; i++) {
    if (lines[i].trim().isEmpty()) {
      result.append(OS.NEWLINE);
      result.append('\t');
    }
 else {
      result.append(OS.NEWLINE);
      result.append('\t');
      result.append(OS.NEWLINE);
      result.append('\t');
      String line=CharMatcher.WHITESPACE.trimTrailingFrom(lines[i]);
      addWrappedLine(result,line,wrapAmount);
    }
  }
  return result.toString();
}
