{
  StringBuilder result=new StringBuilder();
  char c;
  boolean isSpecial;
  for (int i=0; i < toQuote.length(); ++i) {
    c=toQuote.charAt(i);
    isSpecial=(c == quoteChar);
    isSpecial|=((specials != null) && (specials.indexOf(c) >= 0));
    if (isSpecial) {
      result.append(quoteChar);
    }
    result.append(c);
  }
  return result.toString();
}
