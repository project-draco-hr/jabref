{
  if (suffix == null) {
    System.out.println("Link has no obvious extension (DownloadExternalFile.download()");
  }
  String plannedName=bibtexKey + "." + suffix;
  if (Globals.ON_WIN) {
    plannedName=plannedName.replaceAll("\\?|\\*|\\<|\\>|\\||\\\"|\\:|\\.$|\\[|\\]","");
  }
 else   if (Globals.ON_MAC) {
    plannedName=plannedName.replaceAll(":","");
  }
  return plannedName;
}
