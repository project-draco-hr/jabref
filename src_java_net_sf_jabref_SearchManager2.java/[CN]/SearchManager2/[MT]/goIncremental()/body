{
  incSearch=true;
  SwingUtilities.invokeLater(new Thread(){
    public void run(){
      String text=searchField.getText();
      if (incSearchPos >= panel.getDatabase().getEntryCount()) {
        panel.output("'" + text + "' : "+ Globals.lang("Incremental search failed. Repeat to search from top.")+ ".");
        incSearchPos=-1;
        return;
      }
      if (searchField.getText().equals(""))       return;
      if (incSearchPos < 0)       incSearchPos=0;
      BibtexEntry be=panel.getDatabase().getEntryById(panel.tableModel.getNameFromNumber(incSearchPos));
      while (!incSearcher.search(text,be)) {
        incSearchPos++;
        if (incSearchPos < panel.getDatabase().getEntryCount())         be=panel.getDatabase().getEntryById(panel.tableModel.getNameFromNumber(incSearchPos));
 else {
          panel.output("'" + text + "' : "+ Globals.lang("Incremental search failed. Repeat to search from top."));
          incSearchPos=-1;
          return;
        }
      }
      if (incSearchPos >= 0) {
        panel.selectSingleEntry(incSearchPos);
        panel.output("'" + text + "' "+ Globals.lang("found")+ ".");
      }
    }
  }
);
}
