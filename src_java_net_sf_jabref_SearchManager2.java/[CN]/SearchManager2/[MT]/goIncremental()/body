{
  incSearch=true;
  SwingUtilities.invokeLater(new Thread(){
    public void run(){
      String text=searchField.getText();
      BasePanel bp=frame.basePanel();
      if (incSearchPos >= bp.getDatabase().getEntryCount()) {
        frame.output("'" + text + "' : "+ Globals.lang("Incremental search failed. Repeat to search from top.")+ ".");
        incSearchPos=-1;
        return;
      }
      if (searchField.getText().equals(""))       return;
      if (incSearchPos < 0)       incSearchPos=0;
      BibtexEntry be=bp.getDatabase().getEntryById(bp.tableModel.getNameFromNumber(incSearchPos));
      while (!incSearcher.search(text,be)) {
        incSearchPos++;
        if (incSearchPos < bp.getDatabase().getEntryCount())         be=bp.getDatabase().getEntryById(bp.tableModel.getNameFromNumber(incSearchPos));
 else {
          frame.output("'" + text + "' : "+ Globals.lang("Incremental search failed. Repeat to search from top."));
          incSearchPos=-1;
          return;
        }
      }
      if (incSearchPos >= 0) {
        bp.selectSingleEntry(incSearchPos);
        frame.output("'" + text + "' "+ Globals.lang("found")+ ".");
      }
    }
  }
);
}
