{
  StringBuffer buf=new StringBuffer();
  for (int i=0, len=s.length(); i < len; i++) {
    char c=s.charAt(i);
    if (c == '&')     buf.append("&amp;");
 else     if (c == '\"')     buf.append("&quot;");
 else     if (c == '\'')     buf.append("&#039;");
 else     if (c == '<')     buf.append("&lt;");
 else     if (c == '>')     buf.append("&gt;");
 else     buf.append(c);
  }
  return buf.toString();
}
