{
  if (previewListener == null)   previewListener=new ListSelectionListener(){
    public void valueChanged(    final ListSelectionEvent e){
      if (!selectionListenerOn)       return;
      if (!e.getValueIsAdjusting()) {
        SwingUtilities.invokeLater(new Thread(){
          public void run(){
            if (getSelectedRowCount() == 1) {
              int row=getSelectedRow();
              if (row >= 0) {
                panel.updateViewToSelected();
                scrollToCenter(row,0);
              }
            }
 else {
              if (prefs.getBoolean("disableOnMultipleSelection")) {
                panel.setEntryEditorEnabled(false);
              }
            }
          }
        }
);
      }
    }
  }
;
  getSelectionModel().addListSelectionListener(previewListener);
}
