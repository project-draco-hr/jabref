{
  if (previewListener == null)   previewListener=new ListSelectionListener(){
    public void valueChanged(    final ListSelectionEvent e){
      if (!selectionListenerOn)       return;
      if (!e.getValueIsAdjusting()) {
        SwingUtilities.invokeLater(new Thread(){
          public void run(){
            activeRow=resolveNewSelection(getSelectedRows());
            if (getSelectedRowCount() == 1) {
              panel.updateViewToSelected();
              ensureVisible(activeRow);
            }
 else {
              if (prefs.getBoolean("disableOnMultipleSelection")) {
                panel.setEntryEditorEnabled(false);
              }
              if (activeRow >= 0)               panel.updateViewToSelected();
            }
            if (Globals.prefs.getBoolean("highlightGroupsMatchingAny"))             panel.getGroupSelector().showMatchingGroups(panel.getSelectedEntries(),false);
 else             if (Globals.prefs.getBoolean("highlightGroupsMatchingAll"))             panel.getGroupSelector().showMatchingGroups(panel.getSelectedEntries(),true);
 else             panel.getGroupSelector().showMatchingGroups(null,true);
          }
        }
);
      }
    }
  }
;
  getSelectionModel().addListSelectionListener(previewListener);
}
