{
synchronized (set) {
    if (changed) {
      Collections.sort(set,comp);
      changed=false;
    }
    int count=set.size();
    idArray=new String[count];
    entryArray=new BibEntry[count];
    int piv=0;
    for (    BibEntry entry : set) {
      idArray[piv]=entry.getId();
      entryArray[piv]=entry;
      piv++;
    }
  }
}
