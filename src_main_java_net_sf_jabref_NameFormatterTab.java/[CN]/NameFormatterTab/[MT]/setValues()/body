{
  tableRows.clear();
  String[] names=Globals.prefs.getStringArray(NAME_FORMATER_KEY);
  String[] formats=Globals.prefs.getStringArray(NAME_FORMATTER_VALUE);
  if (names == null) {
    names=new String[]{};
  }
  if (formats == null) {
    formats=new String[]{};
  }
  for (int i=0; i < names.length; i++) {
    if (i < formats.length)     tableRows.add(new TableRow(names[i],formats[i]));
 else     tableRows.add(new TableRow(names[i]));
  }
  rowCount=tableRows.size() + 5;
}
