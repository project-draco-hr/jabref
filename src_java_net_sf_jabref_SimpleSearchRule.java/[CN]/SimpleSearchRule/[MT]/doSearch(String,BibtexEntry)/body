{
  int score=0;
  int counter=0;
  if (prefs.getBoolean("searchAll")) {
    score+=searchAllFields(searchString,bibtexEntry);
  }
 else {
    if (prefs.getBoolean("searchReq"))     score+=searchRequiredFields(searchString,bibtexEntry);
    if (prefs.getBoolean("searchOpt"))     score+=searchOptionalFields(searchString,bibtexEntry);
    if (prefs.getBoolean("searchGen"))     score+=searchGeneralFields(searchString,bibtexEntry);
  }
  return score;
}
