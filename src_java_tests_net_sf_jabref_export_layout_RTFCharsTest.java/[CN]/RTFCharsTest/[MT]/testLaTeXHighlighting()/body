{
  LayoutFormatter layout=new RTFChars();
  assertEquals("{\\i hallo}",layout.format("\\emph{hallo}"));
  assertEquals("{\\i hallo}",layout.format("{\\emph hallo}"));
  assertEquals("{\\i hallo}",layout.format("\\textit{hallo}"));
  assertEquals("{\\i hallo}",layout.format("{\\textit hallo}"));
  assertEquals("{\\b hallo}",layout.format("\\textbf{hallo}"));
  assertEquals("{\\b hallo}",layout.format("{\\textbf hallo}"));
}
