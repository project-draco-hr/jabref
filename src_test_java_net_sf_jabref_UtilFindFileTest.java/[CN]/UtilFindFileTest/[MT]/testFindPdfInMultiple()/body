{
{
    String[] dirsToSearch=new String[]{root.getAbsolutePath(),root.getAbsolutePath() + "/pdfs/"};
    String pdf=UtilFindFiles.findPdf(entry,"pdf",dirsToSearch);
    AssertUtil.assertEqualPaths("HipKro03 - Hello.pdf",pdf);
    File fullPath=Util.expandFilename(pdf,dirsToSearch);
    assertNotNull(fullPath);
    assertTrue(fullPath.exists());
    AssertUtil.assertEqualPaths(root.getAbsolutePath() + "/HipKro03 - Hello.pdf",fullPath.getAbsolutePath());
    String tmp=dirsToSearch[1];
    dirsToSearch[1]=dirsToSearch[0];
    dirsToSearch[0]=tmp;
    fullPath=Util.expandFilename(pdf,dirsToSearch);
    assertNotNull(fullPath);
    assertTrue(fullPath.exists());
    AssertUtil.assertEqualPaths(root.getAbsolutePath() + "/HipKro03 - Hello.pdf",fullPath.getAbsolutePath());
    fullPath=Util.expandFilename(pdf,new String[]{dirsToSearch[0]});
    assertNull(fullPath);
    fullPath=Util.expandFilename(pdf,new String[]{dirsToSearch[1]});
    assertNotNull(fullPath);
    assertTrue(fullPath.exists());
    AssertUtil.assertEqualPaths(root.getAbsolutePath() + "/HipKro03 - Hello.pdf",fullPath.getAbsolutePath());
  }
{
    String[] dirsToSearch=new String[]{root.getAbsolutePath() + "/pdfs/",root.getAbsolutePath()};
    String pdf=UtilFindFiles.findPdf(entry,"pdf",dirsToSearch);
    AssertUtil.assertEqualPaths("sub/HipKro03-sub.pdf",pdf);
    File fullPath=Util.expandFilename(pdf,dirsToSearch);
    assertNotNull(fullPath);
    assertTrue(fullPath.exists());
    AssertUtil.assertEqualPaths(root.getAbsolutePath() + "/pdfs/sub/HipKro03-sub.pdf",fullPath.getAbsolutePath());
    String tmp=dirsToSearch[1];
    dirsToSearch[1]=dirsToSearch[0];
    dirsToSearch[0]=tmp;
    fullPath=Util.expandFilename(pdf,dirsToSearch);
    assertNotNull(fullPath);
    assertTrue(fullPath.exists());
    AssertUtil.assertEqualPaths(root.getAbsolutePath() + "/pdfs/sub/HipKro03-sub.pdf",fullPath.getAbsolutePath());
    fullPath=Util.expandFilename(pdf,new String[]{dirsToSearch[0]});
    assertNull(fullPath);
    fullPath=Util.expandFilename(pdf,new String[]{dirsToSearch[1]});
    assertNotNull(fullPath);
    assertTrue(fullPath.exists());
    AssertUtil.assertEqualPaths(root.getAbsolutePath() + "/pdfs/sub/HipKro03-sub.pdf",fullPath.getAbsolutePath());
  }
}
