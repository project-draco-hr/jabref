{
  final Point p=dsde.getLocation();
  SwingUtilities.convertPointFromScreen(p,this);
  final TreePath path=getPathForLocation(p.x,p.y);
  if (path == null) {
    dsde.getDragSourceContext().setCursor(DragSource.DefaultMoveNoDrop);
    return;
  }
  final GroupTreeNode target=(GroupTreeNode)path.getLastPathComponent();
  if ((target == null) || dragNode.isNodeDescendant(target) || (dragNode == target)) {
    dsde.getDragSourceContext().setCursor(DragSource.DefaultMoveNoDrop);
    return;
  }
  dsde.getDragSourceContext().setCursor(DragSource.DefaultMoveDrop);
}
