{
  NameFormatter l=new NameFormatter();
  Assert.assertEquals("Doe",l.format("Joe Doe","1@*@{ll}",null));
  Assert.assertEquals("moremoremoremore",l.format("Joe Doe and Mary Jane and Bruce Bar and Arthur Kay","1@*@{ll}@@2@1..1@{ff}{ll}@2..2@ and {ff}{last}@@*@*@more",null));
  Assert.assertEquals("Doe",l.format("Joe Doe","1@*@{ll}@@2@1..1@{ff}{ll}@2..2@ and {ff}{last}@@*@*@more",null));
  Assert.assertEquals("JoeDoe and MaryJ",l.format("Joe Doe and Mary Jane","1@*@{ll}@@2@1..1@{ff}{ll}@2..2@ and {ff}{l}@@*@*@more",null));
  Assert.assertEquals("Doe, Joe and Jane, M. and Kamp, J.~A.",l.format("Joe Doe and Mary Jane and John Arthur van Kamp","1@*@{ll}, {ff}@@*@1@{ll}, {ff}@2..-1@ and {ll}, {f}.",null));
  Assert.assertEquals("Doe Joe and Jane, M. and Kamp, J.~A.",l.format("Joe Doe and Mary Jane and John Arthur van Kamp","1@*@{ll}, {ff}@@*@1@{ll} {ff}@2..-1@ and {ll}, {f}.",null));
}
