{
  try {
    Integer.parseInt(remoteServerPort.getText());
    return true;
  }
 catch (  NumberFormatException ex) {
    JOptionPane.showMessageDialog(null,Globals.lang("You must enter an integer value in the text field for") + " '" + Globals.lang("Remote server port")+ "'",Globals.lang("Remote server port"),JOptionPane.ERROR_MESSAGE);
    return false;
  }
}
