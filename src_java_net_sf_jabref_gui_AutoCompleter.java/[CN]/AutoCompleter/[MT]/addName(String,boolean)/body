{
  if (s == null)   return;
  String[] parts=s.replace("\\.","").split(" ");
  for (int i=0; i < parts.length; i++) {
    String part=parts[i];
    if (part.length() >= SHORTEST_WORD) {
      words.add(part);
      if (lastName)       lastNames.add(part);
 else       firstNames.add(part);
    }
  }
}
