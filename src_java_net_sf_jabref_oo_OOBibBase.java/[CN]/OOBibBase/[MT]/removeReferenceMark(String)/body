{
  XReferenceMarksSupplier xSupplier=(XReferenceMarksSupplier)UnoRuntime.queryInterface(XReferenceMarksSupplier.class,xCurrentComponent);
  if (xSupplier.getReferenceMarks().hasByName(name)) {
    Object o=xSupplier.getReferenceMarks().getByName(name);
    XTextContent bm=(XTextContent)UnoRuntime.queryInterface(XTextContent.class,o);
    text.removeTextContent(bm);
  }
}
