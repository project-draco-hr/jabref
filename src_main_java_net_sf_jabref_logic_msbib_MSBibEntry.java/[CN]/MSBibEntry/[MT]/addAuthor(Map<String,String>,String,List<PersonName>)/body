{
  if (authors == null) {
    return;
  }
  StringBuilder allAuthorsSB=new StringBuilder();
  boolean first=true;
  for (  PersonName name : authors) {
    if (!first) {
      allAuthorsSB.append(" and ");
    }
    allAuthorsSB.append(name.getFullname());
    first=false;
  }
  String allAuthors=allAuthorsSB.toString();
  map.put(type,allAuthors);
}
