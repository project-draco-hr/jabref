{
  mainPanel.removeAll();
  constraint.weighty=0;
  for (  Component c : comps) {
    gridBagLayout.setConstraints(c,constraint);
    mainPanel.add(c);
  }
  constraint.weighty=1;
  Component bx=Box.createVerticalGlue();
  gridBagLayout.setConstraints(bx,constraint);
  mainPanel.add(bx);
  revalidate();
  repaint();
}
