{
  if (!supportsAdd()) {
    basePanel.output("The group \"" + getName() + "\" does not support the adding of entries.");
    return null;
  }
  for (int i=0; i < GUIGlobals.ALL_FIELDS.length; ++i) {
    if (m_searchField.equals(GUIGlobals.ALL_FIELDS[i]) && !m_searchField.equals("keywords")) {
      if (!showWarningDialog(basePanel))       return null;
    }
  }
  BibtexEntry[] entries=basePanel.getSelectedEntries();
  AbstractUndoableEdit undo=addSelection(entries);
  if (entries.length > 0)   basePanel.output("Appended '" + m_searchExpression + "' to the '"+ m_searchField+ "' field of "+ entries.length+ " entr"+ (entries.length > 1 ? "ies." : "y."));
  return undo;
}
