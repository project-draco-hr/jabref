{
  StringBuffer sb=new StringBuffer();
  String[] authors=in.split(" and ");
  for (int i=0; i < authors.length; i++) {
    authors[i]=authors[i].trim();
    String[] t=authors[i].split(" ");
    sb.append(t[1].trim() + " " + t[0].trim());
    if (i == authors.length - 1)     sb.append(".");
 else     sb.append(" and ");
  }
  return sb.toString();
}
