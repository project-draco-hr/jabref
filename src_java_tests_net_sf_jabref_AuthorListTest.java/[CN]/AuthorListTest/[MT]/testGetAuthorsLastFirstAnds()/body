{
  assertEquals("Smith, John",new AuthorList("John Smith").getAuthorsLastFirstAnds());
  assertEquals("Smith, John and Black Brown, Peter",new AuthorList("John Smith and Black Brown, Peter").getAuthorsLastFirstAnds());
  assertEquals("von Neumann, John and Smith, John and Black Brown, Peter",new AuthorList("John von Neumann and John Smith and Black Brown, Peter").getAuthorsLastFirstAnds());
  assertEquals("von Last, Jr, First",new AuthorList("von Last, Jr ,First").getAuthorsLastFirstAnds());
}
