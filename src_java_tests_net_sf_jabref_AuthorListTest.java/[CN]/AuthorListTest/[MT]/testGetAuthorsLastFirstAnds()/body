{
  assertEquals("Smith, John",AuthorList.getAuthorList("John Smith").getAuthorsLastFirstAnds());
  assertEquals("Smith, John and Black Brown, Peter",AuthorList.getAuthorList("John Smith and Black Brown, Peter").getAuthorsLastFirstAnds());
  assertEquals("von Neumann, John and Smith, John and Black Brown, Peter",AuthorList.getAuthorList("John von Neumann and John Smith and Black Brown, Peter").getAuthorsLastFirstAnds());
  assertEquals("von Last, Jr, First",AuthorList.getAuthorList("von Last, Jr ,First").getAuthorsLastFirstAnds());
}
