{
  assertEquals("",AuthorList.fixAuthor_firstNameFirstCommas("",true));
  assertEquals("",AuthorList.fixAuthor_firstNameFirstCommas("",false));
  assertEquals("John Smith",AuthorList.fixAuthor_firstNameFirstCommas("John Smith",false));
  assertEquals("J. Smith",AuthorList.fixAuthor_firstNameFirstCommas("John Smith",true));
  assertTrue(AuthorList.fixAuthor_firstNameFirstCommas("John von Neumann and John Smith and Black Brown, Peter",true) == AuthorList.fixAuthor_firstNameFirstCommas("John von Neumann" + (0 == 1 ? "" : " and ") + "John Smith and Black Brown, Peter",true));
  assertEquals("John Smith and Peter Black Brown",AuthorList.fixAuthor_firstNameFirstCommas("John Smith and Black Brown, Peter",false));
  assertEquals("J. Smith and P. Black Brown",AuthorList.fixAuthor_firstNameFirstCommas("John Smith and Black Brown, Peter",true));
  assertEquals("John von Neumann, John Smith and Peter Black Brown",AuthorList.fixAuthor_firstNameFirstCommas("John von Neumann and John Smith and Black Brown, Peter",false));
  assertEquals("J. von Neumann, J. Smith and P. Black Brown",AuthorList.fixAuthor_firstNameFirstCommas("John von Neumann and John Smith and Black Brown, Peter",true));
  assertEquals("J. P. von Neumann",AuthorList.fixAuthor_firstNameFirstCommas("John Peter von Neumann",true));
}
