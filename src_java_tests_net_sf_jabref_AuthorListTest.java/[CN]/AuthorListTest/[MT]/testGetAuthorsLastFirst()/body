{
  AuthorList al;
  al=new AuthorList("");
  assertEquals("",al.getAuthorsLastFirst(true));
  assertEquals("",al.getAuthorsLastFirst(false));
  al=new AuthorList("John Smith");
  assertEquals("Smith, John",al.getAuthorsLastFirst(false));
  assertEquals("Smith, J.",al.getAuthorsLastFirst(true));
  al=new AuthorList("John Smith and Black Brown, Peter");
  assertEquals("Smith, John and Black Brown, Peter",al.getAuthorsLastFirst(false));
  assertEquals("Smith, J. and Black Brown, P.",al.getAuthorsLastFirst(true));
  al=new AuthorList("John von Neumann and John Smith and Black Brown, Peter");
  assertEquals("von Neumann, John, Smith, John and Black Brown, Peter",al.getAuthorsLastFirst(false));
  assertEquals("von Neumann, J., Smith, J. and Black Brown, P.",al.getAuthorsLastFirst(true));
  al=new AuthorList("John Peter von Neumann");
  assertEquals("von Neumann, J. P.",al.getAuthorsLastFirst(true));
}
