{
  assertEquals("",AuthorList.fixAuthor_lastNameFirstCommas("",true));
  assertEquals("",AuthorList.fixAuthor_lastNameFirstCommas("",false));
  assertEquals("Smith, John",AuthorList.fixAuthor_lastNameFirstCommas("John Smith",false));
  assertEquals("Smith, J.",AuthorList.fixAuthor_lastNameFirstCommas("John Smith",true));
  assertTrue(AuthorList.fixAuthor_lastNameFirstCommas("John von Neumann and John Smith and Black Brown, Peter",true) == AuthorList.fixAuthor_lastNameFirstCommas("John von Neumann" + (0 == 1 ? "" : " and ") + "John Smith and Black Brown, Peter",true));
  assertEquals("Smith, John and Black Brown, Peter",AuthorList.fixAuthor_lastNameFirstCommas("John Smith and Black Brown, Peter",false));
  assertEquals("Smith, J. and Black Brown, P.",AuthorList.fixAuthor_lastNameFirstCommas("John Smith and Black Brown, Peter",true));
  assertEquals("von Neumann, John, Smith, John and Black Brown, Peter",AuthorList.fixAuthor_lastNameFirstCommas("John von Neumann and John Smith and Black Brown, Peter",false));
  assertEquals("von Neumann, J., Smith, J. and Black Brown, P.",AuthorList.fixAuthor_lastNameFirstCommas("John von Neumann and John Smith and Black Brown, Peter",true));
  assertEquals("von Neumann, J. P.",AuthorList.fixAuthor_lastNameFirstCommas("John Peter von Neumann",true));
}
