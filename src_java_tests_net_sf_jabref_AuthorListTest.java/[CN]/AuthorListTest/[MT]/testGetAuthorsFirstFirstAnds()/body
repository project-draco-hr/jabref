{
  assertEquals("John Smith",new AuthorList("John Smith").getAuthorsFirstFirstAnds());
  assertEquals("John Smith and Peter Black Brown",new AuthorList("John Smith and Black Brown, Peter").getAuthorsFirstFirstAnds());
  assertEquals("John von Neumann and John Smith and Peter Black Brown",new AuthorList("John von Neumann and John Smith and Black Brown, Peter").getAuthorsFirstFirstAnds());
  assertEquals("First von Last, Jr. III",new AuthorList("von Last, Jr. III, First").getAuthorsFirstFirstAnds());
}
