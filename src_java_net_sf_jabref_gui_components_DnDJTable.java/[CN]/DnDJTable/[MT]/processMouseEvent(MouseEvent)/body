{
  if (e.getButton() == MouseEvent.BUTTON1 && !e.isAltDown() && !e.isAltGraphDown() && !e.isControlDown() && !e.isMetaDown() && !e.isShiftDown()) {
    Point p=e.getPoint();
    final int col=columnAtPoint(p);
    final int row=rowAtPoint(p);
    if (isCellSelected(row,col)) {
      if (e.getID() == MouseEvent.MOUSE_RELEASED) {
        getSelectionModel().setSelectionInterval(row,row);
        return;
      }
      if (e.getID() == MouseEvent.MOUSE_PRESSED) {
        int[] selectedRows=getSelectedRows();
        super.processMouseEvent(e);
        clearSelection();
        for (int i=0; i < selectedRows.length; ++i)         addRowSelectionInterval(selectedRows[i],selectedRows[i]);
        return;
      }
    }
  }
  super.processMouseEvent(e);
  selectionToDrag=getSelectedRows();
}
