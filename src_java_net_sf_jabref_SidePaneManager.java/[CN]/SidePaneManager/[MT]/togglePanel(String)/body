{
  Object o=components.get(name);
  if (o != null) {
    if (!visible.contains(o)) {
      visible.add(o);
      updateView();
      ((SidePaneComponent)o).componentOpening();
    }
 else {
      visible.remove(o);
      updateView();
      ((SidePaneComponent)o).componentClosing();
    }
  }
 else   System.err.println("Side pane component '" + name + "' unknown.");
}
