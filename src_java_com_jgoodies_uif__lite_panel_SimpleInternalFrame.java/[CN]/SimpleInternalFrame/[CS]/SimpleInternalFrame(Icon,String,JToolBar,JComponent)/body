{
  super(new BorderLayout());
  this.isSelected=false;
  this.titleLabel=new JLabel(title,icon,SwingConstants.LEADING);
  JPanel top=buildHeader(titleLabel,bar);
  add(top,BorderLayout.NORTH);
  if (content != null) {
    setContent(content);
  }
  setBorder(new ShadowBorder());
  setSelected(true);
  updateHeader();
}
