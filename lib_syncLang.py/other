import sys
import os
import re
if ((len(sys.argv) >= 2) and (sys.argv[1] == '-s')):
    if ((len(sys.argv) >= 3) and (sys.argv[2] == '-u')):
        update = 1
    else:
        update = 0
    findNewKeysInJavaCode('resource/JabRef_en.properties', '.', update)
else:
    if ((len(sys.argv) < 2) or (not (sys.argv[1] == '-u'))):
        changeFiles = 0
    else:
        changeFiles = 1
    handleFileSet('resource/JabRef_en.properties', ('resource/JabRef_de.properties', 'resource/JabRef_fr.properties', 'resource/JabRef_no.properties'), changeFiles)
    handleFileSet('resource/Menu_en.properties', ('resource/Menu_de.properties', 'resource/Menu_fr.properties', 'resource/Menu_no.properties'), changeFiles)
