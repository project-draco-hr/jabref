{
  GroupTreeNode grandParent=getNodeInSimpleTree();
  GroupTreeNode parent=grandParent.addSubgroup(new KeywordGroup("node","author","author2",true,false,GroupHierarchyType.INDEPENDENT,JabRefPreferences.getInstance().get(JabRefPreferences.KEYWORD_SEPARATOR)));
  GroupTreeNode node=parent.addSubgroup(new KeywordGroup("node","author","author1",true,false,GroupHierarchyType.REFINING,JabRefPreferences.getInstance().get(JabRefPreferences.KEYWORD_SEPARATOR)));
  assertEquals(1,node.numberOfHits(entries));
}
