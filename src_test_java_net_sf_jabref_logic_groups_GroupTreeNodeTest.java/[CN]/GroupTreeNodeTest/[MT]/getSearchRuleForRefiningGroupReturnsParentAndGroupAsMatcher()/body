{
  GroupTreeNode parent=GroupTreeNode.fromGroup(new ExplicitGroup("parent",GroupHierarchyType.INDEPENDENT,JabRefPreferences.getInstance().get(JabRefPreferences.KEYWORD_SEPARATOR)));
  GroupTreeNode node=parent.addSubgroup(new ExplicitGroup("node",GroupHierarchyType.REFINING,JabRefPreferences.getInstance().get(JabRefPreferences.KEYWORD_SEPARATOR)));
  AndMatcher matcher=new AndMatcher();
  matcher.addRule(node.getGroup());
  matcher.addRule(parent.getGroup());
  assertEquals(matcher,node.getSearchRule());
}
