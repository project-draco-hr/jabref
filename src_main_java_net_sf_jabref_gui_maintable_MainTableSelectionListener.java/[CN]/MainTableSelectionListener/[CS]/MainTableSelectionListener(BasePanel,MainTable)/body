{
  this.table=table;
  this.panel=panel;
  this.tableRows=table.getTableModel().getTableRows();
  previewPanel=new PreviewPanel[]{new PreviewPanel(panel.database(),null,panel,panel.getBibDatabaseContext().getMetaData(),Globals.prefs.get(JabRefPreferences.PREVIEW_0)),new PreviewPanel(panel.database(),null,panel,panel.getBibDatabaseContext().getMetaData(),Globals.prefs.get(JabRefPreferences.PREVIEW_1))};
  panel.getSearchBar().getSearchQueryHighlightObservable().addSearchListener(previewPanel[0]);
  panel.getSearchBar().getSearchQueryHighlightObservable().addSearchListener(previewPanel[1]);
  this.preview=previewPanel[activePreview];
}
