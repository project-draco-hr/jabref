{
  m_groupSelector=gs;
  m_groupsRootHandle=groupsRoot;
  m_editType=editType;
  m_subtreeRootChildCount=editedNode.getChildCount();
  m_subtreeBackup=editType != UndoableAddOrRemoveGroup.REMOVE_NODE_KEEP_CHILDREN ? editedNode.getNode().copySubtree() : new GroupTreeNode(editedNode.getNode().getGroup().deepCopy());
  m_pathToNode=editedNode.getNode().getIndexedPathFromRoot();
}
