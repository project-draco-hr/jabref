  ta.getActionMap().put(Actions.UNDO,undoAction);
  ta.getInputMap().put(prefs.getKey("Redo"),"redo");
  ta.getActionMap().put(Actions.REDO,redoAction);
  ta.addFocusListener(new FieldListener());
}
