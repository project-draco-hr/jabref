{
  assertCaseChangerT("Hallo world: How","HAllo WORLD: HOW");
  assertCaseChangerT("Hallo world! how","HAllo WORLD! HOW");
  assertCaseChangerT("Hallo world? how","HAllo WORLD? HOW");
  assertCaseChangerT("Hallo world. how","HAllo WORLD. HOW");
  assertCaseChangerT("Hallo world, how","HAllo WORLD, HOW");
  assertCaseChangerT("Hallo world; how","HAllo WORLD; HOW");
  assertCaseChangerT("Hallo world- how","HAllo WORLD- HOW");
}
