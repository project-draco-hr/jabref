{
  int piv=0;
  while (piv < text.length()) {
    int index=text.indexOf(word,piv);
    if (index < 0) {
      return false;
    }
    if ((index == 0 || !Character.isLetterOrDigit(text.charAt(index - 1))) && (((index + word.length()) == text.length()) || !Character.isLetterOrDigit(text.charAt(index + word.length())))) {
      return true;
    }
 else {
      piv=index + 1;
    }
  }
  return false;
}
