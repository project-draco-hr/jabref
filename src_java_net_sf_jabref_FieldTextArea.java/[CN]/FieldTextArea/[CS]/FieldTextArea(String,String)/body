{
  super(content);
  addFocusListener(Globals.focusListener);
  sp=new JScrollPane(this,JScrollPane.VERTICAL_SCROLLBAR_AS_NEEDED,JScrollPane.HORIZONTAL_SCROLLBAR_NEVER);
  setLineWrap(true);
  setWrapStyleWord(true);
  fieldName=fieldName_;
  label=new JLabel(" " + Util.nCase(fieldName) + " ",JLabel.CENTER);
  label.setBorder(BorderFactory.createEtchedBorder());
  setBackground(GUIGlobals.validFieldBackground);
  if ((content != null) && (content.length() > 0))   label.setForeground(GUIGlobals.validFieldColor);
 else   label.setForeground(GUIGlobals.nullFieldColor);
}
