{
  InputStreamReader in;
  if (encoding != null) {
    in=new InputStreamReader(source.getInputStream(),encoding);
  }
 else {
    in=new InputStreamReader(source.getInputStream());
  }
  StringBuffer sb=new StringBuffer();
  while (true) {
    int byteRead=in.read();
    if (byteRead == -1)     break;
    sb.append((char)byteRead);
  }
  return sb.toString();
}
