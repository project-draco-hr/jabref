{
  File file=new File(name);
  if (!file.exists() && (dir != null)) {
    if (dir.endsWith(System.getProperty("file.separator")))     name=dir + name;
 else     name=dir + System.getProperty("file.separator") + name;
    file=new File(name);
    return (file.exists() ? file : null);
  }
 else   return file;
}
