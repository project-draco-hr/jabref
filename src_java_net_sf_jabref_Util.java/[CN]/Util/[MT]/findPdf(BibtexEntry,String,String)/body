{
  try {
    directory=new File(directory).getCanonicalPath();
  }
 catch (  IOException e) {
    return null;
  }
  if (!directory.endsWith(System.getProperty("file.separator")))   directory+=System.getProperty("file.separator");
  String result=findFile(entry,null,directory + "**" + System.getProperty("file.separator"),".*[bibtexkey].*\\." + extension);
  if (result != null)   result=result.substring(directory.length());
  return result;
}
