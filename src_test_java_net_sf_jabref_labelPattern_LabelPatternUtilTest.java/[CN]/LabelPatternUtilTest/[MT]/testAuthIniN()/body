{
  Assert.assertEquals("NMEB",LabelPatternUtil.authIniN("I. Newton and J. Maxwell and A. Einstein and N. Bohr and Harry Unknown",4));
  Assert.assertEquals("NMEB",LabelPatternUtil.authIniN("I. Newton and J. Maxwell and A. Einstein and N. Bohr",4));
  Assert.assertEquals("NeME",LabelPatternUtil.authIniN("I. Newton and J. Maxwell and A. Einstein",4));
  Assert.assertEquals("NeMa",LabelPatternUtil.authIniN("I. Newton and J. Maxwell",4));
  Assert.assertEquals("Newt",LabelPatternUtil.authIniN("I. Newton",4));
  Assert.assertEquals("","");
  Assert.assertEquals("N",LabelPatternUtil.authIniN("I. Newton",1));
  Assert.assertEquals("",LabelPatternUtil.authIniN("I. Newton",0));
  Assert.assertEquals("",LabelPatternUtil.authIniN("I. Newton",-1));
  Assert.assertEquals("Newton",LabelPatternUtil.authIniN("I. Newton",6));
  Assert.assertEquals("Newton",LabelPatternUtil.authIniN("I. Newton",7));
  try {
    LabelPatternUtil.authIniN(null,3);
    Assert.fail();
  }
 catch (  NullPointerException ignored) {
  }
}
