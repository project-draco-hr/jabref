{
  if (increment.isSelected() && (incSearchPos >= 0)) {
    repeatIncremental();
    return;
  }
  if (!searchField.hasFocus()) {
    searchField.setText("");
    searchField.requestFocus();
  }
 else {
    if (increment.isSelected())     select.setSelected(true);
 else     if (select.isSelected())     reorder.setSelected(true);
 else     increment.setSelected(true);
  }
}
