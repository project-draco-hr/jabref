{
  int index=s.indexOf(" and ");
  if (index >= 0) {
    return AuthorList.fixAuthor_lastNameFirst(s);
  }
  index=s.lastIndexOf(",");
  if (index == (s.length() - 1)) {
    String mod=s.substring(0,s.length() - 1).replaceAll(", "," and ");
    return AuthorList.fixAuthor_lastNameFirst(mod);
  }
 else {
    return AuthorList.fixAuthor_lastNameFirst(s);
  }
}
