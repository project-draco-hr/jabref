{
  String name=((JMenuItem)e.getSource()).getText();
  int pos=name.indexOf(' ');
  name=name.substring(pos + 1);
  final File fileToOpen=new File(name);
  if (!fileToOpen.exists()) {
    JOptionPane.showMessageDialog(frame,Localization.lang("File not found") + ": " + fileToOpen.getName(),"Error",JOptionPane.ERROR_MESSAGE);
    history.removeItem(name);
    setItems();
    return;
  }
  JabRefExecutorService.INSTANCE.execute(new Runnable(){
    @Override public void run(){
      frame.getOpenDatabaseAction().openFile(fileToOpen,true);
    }
  }
);
}
