{
  File lock=new File(file.getPath() + SaveSession.LOCKFILE_SUFFIX);
  if (lock.exists()) {
    return true;
  }
  FileOutputStream out=new FileOutputStream(lock);
  out.write(0);
  try {
    out.close();
  }
 catch (  IOException ex) {
    LOGGER.error("Error when creating lock file");
  }
  lock.deleteOnExit();
  return false;
}
