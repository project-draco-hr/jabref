{
  File lock=new File(file.getPath() + SaveSession.LOCKFILE_SUFFIX);
  if (lock.exists()) {
    return true;
  }
  try (FileOutputStream out=new FileOutputStream(lock)){
    out.write(0);
    out.close();
  }
 catch (  IOException ex) {
    LOGGER.error("Error when creating lock file.",ex);
  }
  lock.deleteOnExit();
  return false;
}
