{
  String chosen;
  if (dir) {
    chosen=FileDialogs.getNewDir(frame,new File(comp.getText()),Collections.emptyList(),JFileChooser.OPEN_DIALOG,false);
  }
 else {
    chosen=FileDialogs.getNewFile(frame,new File(comp.getText()),Collections.emptyList(),JFileChooser.OPEN_DIALOG,false);
  }
  if (chosen != null) {
    File nFile=new File(chosen);
    comp.setText(nFile.getPath());
  }
}
