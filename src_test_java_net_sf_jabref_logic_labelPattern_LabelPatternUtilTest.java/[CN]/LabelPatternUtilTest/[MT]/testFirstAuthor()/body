{
  Assert.assertEquals("Newton",LabelPatternUtil.firstAuthor("I. Newton and J. Maxwell and A. Einstein and N. Bohr and Harry Unknown"));
  Assert.assertEquals("Newton",LabelPatternUtil.firstAuthor("I. Newton"));
  Assert.assertEquals("K{\\\"o}ning",LabelPatternUtil.firstAuthor("K{\\\"o}ning"));
  Assert.assertEquals("",LabelPatternUtil.firstAuthor(""));
  try {
    LabelPatternUtil.firstAuthor(null);
    Assert.fail();
  }
 catch (  NullPointerException ignored) {
  }
}
