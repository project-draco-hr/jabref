{
  Assert.assertEquals("NME+",LabelPatternUtil.authshort("I. Newton and J. Maxwell and A. Einstein and N. Bohr"));
  Assert.assertEquals("NME",LabelPatternUtil.authshort("I. Newton and J. Maxwell and A. Einstein"));
  Assert.assertEquals("NM",LabelPatternUtil.authshort("I. Newton and J. Maxwell"));
  Assert.assertEquals("Newton",LabelPatternUtil.authshort("I. Newton"));
}
