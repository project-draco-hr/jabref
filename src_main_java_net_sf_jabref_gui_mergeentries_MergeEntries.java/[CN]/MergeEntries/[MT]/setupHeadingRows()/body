{
  mainPanel.add(boldFontLabel(Localization.lang("Use")),CELL_CONSTRAINTS.xyw(4,1,7,"center, bottom"));
  mainPanel.add(diffMode,CELL_CONSTRAINTS.xy(11,1,"right, bottom"));
