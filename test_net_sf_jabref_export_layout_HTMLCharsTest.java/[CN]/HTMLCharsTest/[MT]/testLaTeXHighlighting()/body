{
  LayoutFormatter layout=new HTMLChars();
  assertEquals("<em>hallo</em>",layout.format("\\emph{hallo}"));
  assertEquals("<em>hallo</em>",layout.format("{\\emph hallo}"));
  assertEquals("<em>hallo</em>",layout.format("\\textit{hallo}"));
  assertEquals("<em>hallo</em>",layout.format("{\\textit hallo}"));
  assertEquals("<b>hallo</b>",layout.format("\\textbf{hallo}"));
  assertEquals("<b>hallo</b>",layout.format("{\\textbf hallo}"));
}
