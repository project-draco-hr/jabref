{
  InputStream input=new BufferedInputStream(con.getInputStream());
  Writer output=new StringWriter();
  try {
    copy(input,output);
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
 finally {
    try {
      input.close();
      output.close();
    }
 catch (    Exception ignored) {
    }
  }
  content=output.toString();
}
