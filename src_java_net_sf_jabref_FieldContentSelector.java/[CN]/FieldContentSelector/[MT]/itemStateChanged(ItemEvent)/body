{
  if (e.getStateChange() == ItemEvent.DESELECTED)   return;
  if (list.getSelectedIndex() == 0)   return;
  String chosen=(String)list.getSelectedItem();
  if (list.getSelectedIndex() == -1) {
    Vector items=metaData.getData(Globals.SELECTOR_META_PREFIX + editor.getFieldName());
    boolean exists=false;
    int pos=-1;
    for (int i=0; i < items.size(); i++) {
      String s=(String)items.elementAt(i);
      if (s.equals(chosen)) {
        exists=true;
        break;
      }
      if (s.toLowerCase().compareTo(chosen.toLowerCase()) < 0)       pos=i + 1;
    }
    if (!exists) {
      items.add(Math.max(0,pos),chosen);
      parent.panel.markNonUndoableBaseChanged();
      updateList();
    }
  }
  if (!editor.getText().equals(""))   editor.append(DELIMITER);
  editor.append(chosen + DELIMITER_2);
  parent.storeFieldAction.actionPerformed(new ActionEvent(editor,0,""));
}
