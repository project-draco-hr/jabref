{
  if (e.getActionCommand().equals("comboBoxChanged") && (e.getModifiers() == 0))   return;
  if (list.getSelectedIndex() == 0)   return;
  String chosen=(String)list.getSelectedItem();
  if (chosen == null)   return;
  if (list.getSelectedIndex() == -1) {
    addWord(chosen);
  }
  if (!m_editor.getText().equals(""))   m_editor.append(DELIMITER);
  m_editor.append(chosen + DELIMITER_2);
  list.setSelectedIndex(0);
  if (m_action != null)   m_action.actionPerformed(new ActionEvent(m_editor,0,""));
  m_editor.requestFocus();
}
