{
  setLayout(gbl);
  list.setMaximumRowCount(35);
  list.putClientProperty(Options.COMBO_POPUP_PROTOTYPE_DISPLAY_VALUE_KEY,"The longest text in the combo popup menu. And even longer.");
  updateList();
  con.gridwidth=m_horizontalLayout ? 3 : GridBagConstraints.REMAINDER;
  con.fill=GridBagConstraints.HORIZONTAL;
  con.weightx=1;
  gbl.setConstraints(list,con);
  list.addActionListener(this);
  add(list);
  if (m_horizontalLayout)   add(Box.createHorizontalStrut(Sizes.dialogUnitXAsPixel(2,this)));
  manage=new JButton(Globals.lang("Manage"));
  gbl.setConstraints(manage,con);
  add(manage);
  manage.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      ContentSelectorDialog2 csd=m_owner instanceof Frame ? new ContentSelectorDialog2((Frame)m_owner,m_frame,m_panel,true,m_metaData,m_editor.getFieldName()) : new ContentSelectorDialog2((Dialog)m_owner,m_frame,m_panel,true,m_metaData,m_editor.getFieldName());
      Util.placeDialog(csd,m_frame);
      csd.setVisible(true);
      updateList();
    }
  }
);
}
