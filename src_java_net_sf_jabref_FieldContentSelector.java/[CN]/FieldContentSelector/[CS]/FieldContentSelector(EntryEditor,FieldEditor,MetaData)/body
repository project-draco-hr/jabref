{
  setLayout(gbl);
  this.editor=editor_;
  this.parent=parent;
  metaData=data;
  list.setEditable(true);
  final MetaData metaData=data;
  final JabRefFrame frame=parent.frame;
  updateList();
  con.gridwidth=GridBagConstraints.REMAINDER;
  con.fill=GridBagConstraints.HORIZONTAL;
  con.weightx=1;
  gbl.setConstraints(list,con);
  list.addItemListener(this);
  add(list);
  manage=new JButton(Globals.lang("Manage"));
  gbl.setConstraints(manage,con);
  add(manage);
  manage.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      ContentSelectorDialog2 csd=new ContentSelectorDialog2(frame,true,metaData,editor.getFieldName());
      Util.placeDialog(csd,frame);
      csd.show();
      updateList();
    }
  }
);
}
