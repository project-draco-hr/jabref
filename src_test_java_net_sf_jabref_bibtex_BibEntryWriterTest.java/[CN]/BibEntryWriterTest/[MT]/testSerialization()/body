{
  StringWriter stringWriter=new StringWriter();
  BibEntry entry=new BibEntry("1234","article");
  entry.setField("author","Foo Bar");
  entry.setField("journal","International Journal of Something");
  entry.setField("number","1");
  entry.setField("note","some note");
  writer.write(entry,stringWriter,BibDatabaseMode.BIBTEX);
  String actual=stringWriter.toString();
  String expected=Globals.NEWLINE + "@Article{," + Globals.NEWLINE+ "  author =  {Foo Bar},"+ Globals.NEWLINE+ "  journal = {International Journal of Something},"+ Globals.NEWLINE+ "  number =  {1},"+ Globals.NEWLINE+ "  note =    {some note}"+ Globals.NEWLINE+ "}"+ Globals.NEWLINE;
  assertEquals(expected,actual);
}
