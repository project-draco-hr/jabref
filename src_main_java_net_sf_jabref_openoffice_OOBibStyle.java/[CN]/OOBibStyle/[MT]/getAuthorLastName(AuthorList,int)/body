{
  StringBuilder sb=new StringBuilder();
  if (al.getNumberOfAuthors() > number) {
    Author a=al.getAuthor(number);
    if ((a.getVon() != null) && !a.getVon().isEmpty()) {
      String von=a.getVon();
      sb.append(von);
      sb.append(' ');
    }
    sb.append(a.getLast());
  }
  return sb.toString();
}
