{
  ZipOutputStream out=new ZipOutputStream(new BufferedOutputStream(new FileOutputStream(file)));
  try {
    ZipEntry zipEntry=new ZipEntry("content.xml");
    out.putNextEntry(zipEntry);
    int c=-1;
    while ((c=source.read()) >= 0) {
      out.write(c);
    }
    out.closeEntry();
  }
  finally {
    out.close();
  }
}
