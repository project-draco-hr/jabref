{
  if (name.equals(parent.getName())) {
    return parent;
  }
  if (parent instanceof Container) {
    Component[] children=((Container)parent).getComponents();
    for (    Component aChildren : children) {
      Component child=TestUtils.getChildNamed(aChildren,name);
      if (child != null) {
        return child;
      }
    }
  }
  return null;
}
