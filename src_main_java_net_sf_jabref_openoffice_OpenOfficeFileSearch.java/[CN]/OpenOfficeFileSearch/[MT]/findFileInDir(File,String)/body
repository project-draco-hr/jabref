{
  if (fileSearchCancelled) {
    return null;
  }
  File[] files=startDir.listFiles();
  if (files == null) {
    return null;
  }
  File result=null;
  for (  File file : files) {
    if (fileSearchCancelled) {
      return null;
    }
    if (file.isDirectory()) {
      result=findFileInDir(file,filename);
      if (result != null) {
        break;
      }
    }
 else     if (file.getName().equals(filename)) {
      result=startDir;
      break;
    }
  }
  return result;
}
