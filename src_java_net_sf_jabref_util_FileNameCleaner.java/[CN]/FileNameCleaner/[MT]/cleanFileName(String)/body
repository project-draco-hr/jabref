{
  StringBuilder cleanName=new StringBuilder();
  for (int i=0; i < badFileName.length(); i++) {
    int c=(int)badFileName.charAt(i);
    if (Arrays.binarySearch(illegalChars,c) < 0) {
      cleanName.append((char)c);
    }
 else {
      cleanName.append('_');
    }
  }
  return cleanName.toString();
}
