{
  assertEquals("C",BibtexNameFormatter.getFirstCharOfString("Charles"));
  assertEquals("V",BibtexNameFormatter.getFirstCharOfString("Vall{\\'e}e"));
  assertEquals("{\\'e}",BibtexNameFormatter.getFirstCharOfString("{\\'e}"));
  assertEquals("{\\'e",BibtexNameFormatter.getFirstCharOfString("{\\'e"));
  assertEquals("E",BibtexNameFormatter.getFirstCharOfString("{E"));
}
