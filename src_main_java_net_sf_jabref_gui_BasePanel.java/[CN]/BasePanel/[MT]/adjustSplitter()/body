{
  if (mode == BasePanelMode.SHOWING_PREVIEW) {
    splitPane.setDividerLocation(splitPane.getHeight() - Globals.prefs.getPreviewPreferences().getPreviewPanelHeight());
  }
 else {
    splitPane.setDividerLocation(splitPane.getHeight() - Globals.prefs.getInt(JabRefPreferences.ENTRY_EDITOR_HEIGHT));
  }
}
