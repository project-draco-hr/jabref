{
  Map result=new HashMap();
  String[] names=Globals.prefs.getStringArray(NAME_FORMATER_KEY);
  String[] formats=Globals.prefs.getStringArray(NAME_FORMATTER_VALUE);
  if (names == null) {
    names=new String[]{};
  }
  if (formats == null) {
    formats=new String[]{};
  }
  for (int i=0; i < names.length; i++) {
    if (i < formats.length)     result.put(names[i],formats[i]);
 else     result.put(names[i],NameFormat.DEFAULT_FORMAT);
  }
  return result;
}
