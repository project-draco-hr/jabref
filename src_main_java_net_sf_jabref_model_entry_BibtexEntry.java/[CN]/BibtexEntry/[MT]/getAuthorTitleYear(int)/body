{
  String[] s=new String[]{getField("author"),getField("title"),getField("year")};
  for (int i=0; i < s.length; ++i) {
    if (s[i] == null) {
      s[i]="N/A";
    }
  }
  String text=s[0] + ": \"" + s[1]+ "\" ("+ s[2]+ ')';
  if (maxCharacters <= 0 || text.length() <= maxCharacters) {
    return text;
  }
  return text.substring(0,maxCharacters + 1) + "...";
}
