{
  Assert.assertEquals("Upper Each First",formatter.format("upper each first"));
  Assert.assertEquals("An Upper Each First And",formatter.format("an upper each first and"));
  Assert.assertEquals("An Upper Each of the and First And",formatter.format("an upper each of the and first and"));
  Assert.assertEquals("An Upper Each of: The and First And",formatter.format("an upper each of: the and first and"));
  Assert.assertEquals("An Upper First with and without {CURLY} {brackets}",formatter.format("AN UPPER FIRST WITH AND WITHOUT {CURLY} {brackets}"));
  Assert.assertEquals("An Upper First with {A}nd without {C}urly {b}rackets",formatter.format("AN UPPER FIRST WITH {A}ND WITHOUT {C}URLY {b}rackets"));
}
