{
  try {
    int portNumber=Integer.parseInt(remoteServerPort.getText());
    if (RemoteUtil.isValidPortNumber(portNumber)) {
      return true;
    }
 else {
      throw new NumberFormatException();
    }
  }
 catch (  NumberFormatException ex) {
    JOptionPane.showMessageDialog(null,Globals.lang("You must enter an integer value in the interval 1025-65535 in the text field for") + " '" + Globals.lang("Remote server port")+ '\'',Globals.lang("Remote server port"),JOptionPane.ERROR_MESSAGE);
    return false;
  }
}
