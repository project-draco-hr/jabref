{
  if (showing == be) {
    if (splitPane.getBottomComponent() == null) {
      showing=null;
      showEntry(be);
    }
 else {
      ((EntryEditor)splitPane.getBottomComponent()).updateAllFields();
    }
    return;
  }
  EntryEditor form;
  int divLoc=-1;
  String visName=null;
  if (showing != null) {
    visName=((EntryEditor)splitPane.getBottomComponent()).getVisiblePanelName();
  }
  if (showing != null)   divLoc=splitPane.getDividerLocation();
  if (entryEditors.containsKey(be.getType().getName())) {
    form=(EntryEditor)entryEditors.get((be.getType().getName()));
    form.switchTo(be);
    if (visName != null)     form.setVisiblePanel(visName);
    splitPane.setBottomComponent(form);
  }
 else {
    form=new EntryEditor(frame,BasePanel.this,be);
    if (visName != null)     form.setVisiblePanel(visName);
    splitPane.setBottomComponent(form);
    entryEditors.put(be.getType().getName(),form);
  }
  if (divLoc > 0) {
    splitPane.setDividerLocation(divLoc);
  }
 else   splitPane.setDividerLocation(GUIGlobals.VERTICAL_DIVIDER_LOCATION);
  showing=be;
  setEntryEditorEnabled(true);
}
