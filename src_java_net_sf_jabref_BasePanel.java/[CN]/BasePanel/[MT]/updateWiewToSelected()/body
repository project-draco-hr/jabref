{
  BibtexEntry be=null;
  BibtexEntry[] bes=entryTable.getSelectedEntries();
  if ((bes != null) && (bes.length > 0))   be=bes[0];
 else   return;
  if (showing != null) {
    showEntry(be);
    return;
  }
  if (!previewEnabled) {
    splitPane.setBottomComponent(null);
    return;
  }
  if (previewPanel == null) {
    previewPanel=new PreviewPanel(be);
  }
 else   previewPanel.setEntry(be);
  splitPane.setBottomComponent(previewPanel);
  splitPane.setDividerLocation(splitPane.getHeight() - GUIGlobals.PREVIEW_HEIGHT);
  previewPanel.repaint();
}
