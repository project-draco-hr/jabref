{
  if (e.isPopupTrigger()) {
    if (myFieldName != null) {
      String txt=myFieldName.getSelectedText();
      boolean cStat=false;
      if (txt != null)       if (txt.length() > 0)       cStat=true;
      copyAct.setEnabled(cStat);
      inputMenu.show(e.getComponent(),e.getX(),e.getY());
    }
  }
}
