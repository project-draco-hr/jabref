{
  dialog.setVisible(true);
  try {
    String ticket=openTicket();
    String citations=getCitations(ticket,query);
    Collection<BibtexEntry> entries=getBibtexEntries(ticket,citations);
    if (entries.size() == 0) {
      dialog.dispose();
      JOptionPane.showMessageDialog(frame,Globals.lang("No entries found for the search string '%0'",query),Globals.lang("Search JSTOR"),JOptionPane.INFORMATION_MESSAGE);
      return;
    }
    dialog.addEntries(entries);
    dialog.entryListComplete();
  }
 catch (  IOException e) {
    frame.output(Globals.lang("Error while fetching from JSTOR") + ": " + e.getMessage());
  }
}
