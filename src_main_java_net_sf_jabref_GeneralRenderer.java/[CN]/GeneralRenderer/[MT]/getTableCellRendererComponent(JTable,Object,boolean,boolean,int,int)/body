{
  if (selBackground == null)   return super.getTableCellRendererComponent(table,o,isSelected,hasFocus,row,column);
 else {
    Component c=super.getTableCellRendererComponent(table,o,isSelected,hasFocus,row,column);
    if (isSelected)     c.setBackground(selBackground);
 else     c.setBackground(background);
    return c;
  }
}
