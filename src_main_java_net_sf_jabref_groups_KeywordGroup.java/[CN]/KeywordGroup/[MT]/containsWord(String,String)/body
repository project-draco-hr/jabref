{
  int piv=0;
  while (piv < text.length()) {
    int ind=text.indexOf(word,piv);
    if (ind < 0) {
      return false;
    }
    if (((ind == 0) || !Character.isLetterOrDigit(text.charAt(ind - 1))) && (((ind + word.length()) == text.length()) || !Character.isLetterOrDigit(text.charAt(ind + word.length())))) {
      return true;
    }
 else {
      piv=ind + 1;
    }
  }
  return false;
}
