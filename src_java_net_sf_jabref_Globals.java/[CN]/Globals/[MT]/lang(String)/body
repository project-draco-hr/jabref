{
  String translation=null;
  try {
    if (Globals.messages != null)     translation=Globals.messages.getString(key.replaceAll(" ","_"));
  }
 catch (  MissingResourceException ex) {
    translation=key;
    System.err.println("Warning: could not get translation for \"" + key + "\"");
  }
  if (translation != null)   return translation.replaceAll("_"," ");
 else   return null;
}
