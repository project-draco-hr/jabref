{
{
    assertEquals("",AuthorList.getAuthorList("").getAuthorsLastOnly(false));
    assertEquals("Smith",AuthorList.getAuthorList("John Smith").getAuthorsLastOnly(false));
    assertEquals("Smith",AuthorList.getAuthorList("Smith, Jr, John").getAuthorsLastOnly(false));
    assertEquals("von Neumann, Smith and Black Brown",AuthorList.getAuthorList("John von Neumann and John Smith and Black Brown, Peter").getAuthorsLastOnly(false));
  }
{
    assertEquals("",AuthorList.getAuthorList("").getAuthorsLastOnly(true));
    assertEquals("Smith",AuthorList.getAuthorList("John Smith").getAuthorsLastOnly(true));
    assertEquals("Smith",AuthorList.getAuthorList("Smith, Jr, John").getAuthorsLastOnly(true));
    assertEquals("von Neumann, Smith, and Black Brown",AuthorList.getAuthorList("John von Neumann and John Smith and Black Brown, Peter").getAuthorsLastOnly(true));
  }
}
