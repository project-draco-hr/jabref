{
  if (text == null)   return null;
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < text.length(); i++) {
    int c=text.charAt(i);
    if (c == '&') {
      i=readHtmlChar(text,sb,i);
      sb.append((char)c);
    }
 else     if (c == '<') {
      i=readTag(text,sb,i);
    }
 else     sb.append((char)c);
  }
  return sb.toString();
}
