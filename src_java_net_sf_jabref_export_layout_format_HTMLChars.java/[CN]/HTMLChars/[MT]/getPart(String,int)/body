{
  char c;
  int count=0;
  StringBuffer part=new StringBuffer();
  while ((count >= 0) && (i < text.length())) {
    i++;
    c=text.charAt(i);
    if (c == '}')     count--;
 else     if (c == '{')     count++;
    part.append((char)c);
  }
  return new IntAndString(part.length(),format(part.toString()));
}
