{
  if ((pos + 1) < c.length) {
    if ((c[pos] == 'o') && (c[pos + 1] == 'e')) {
      return 778;
    }
    if ((c[pos] == 'O') && (c[pos + 1] == 'E')) {
      return 1014;
    }
    if ((c[pos] == 'a') && (c[pos + 1] == 'e')) {
      return 722;
    }
    if ((c[pos] == 'A') && (c[pos + 1] == 'E')) {
      return 903;
    }
    if ((c[pos] == 's') && (c[pos + 1] == 's')) {
      return 500;
    }
  }
  return BibtexWidth.getCharWidth(c[pos]);
}
