{
  String[] s=new String[]{getFieldOptional(FieldName.AUTHOR).orElse("N/A"),getFieldOptional(FieldName.TITLE).orElse("N/A"),getFieldOptional(FieldName.YEAR).orElse("N/A")};
  String text=s[0] + ": \"" + s[1]+ "\" ("+ s[2]+ ')';
  if ((maxCharacters <= 0) || (text.length() <= maxCharacters)) {
    return text;
  }
  return text.substring(0,maxCharacters + 1) + "...";
}
