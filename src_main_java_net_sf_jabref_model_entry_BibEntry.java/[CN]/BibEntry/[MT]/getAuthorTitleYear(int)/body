{
  String[] s=new String[]{getFieldOptional("author").orElse("N/A"),getFieldOptional("title").orElse("N/A"),getFieldOptional("year").orElse("N/A")};
  String text=s[0] + ": \"" + s[1]+ "\" ("+ s[2]+ ')';
  if ((maxCharacters <= 0) || (text.length() <= maxCharacters)) {
    return text;
  }
  return text.substring(0,maxCharacters + 1) + "...";
}
