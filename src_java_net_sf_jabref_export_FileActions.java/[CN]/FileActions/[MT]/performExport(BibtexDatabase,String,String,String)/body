{
  String lfFileName=exportName, directory=null;
  if (exportName.equals("harvard")) {
    directory="harvard";
  }
 else   if (exportName.equals("endnote")) {
    lfFileName="EndNote";
    directory="endnote";
  }
  File outFile=new File(fileName);
  final String dir=(directory == null ? Globals.LAYOUT_PREFIX : Globals.LAYOUT_PREFIX + directory + "/");
  final String lfName=lfFileName;
  final File oFile=outFile;
  FileActions.exportDatabase(database,dir,lfName,oFile,encoding);
}
