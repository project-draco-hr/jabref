{
  LayoutFormatter layout=new RTFChars();
  Assert.assertEquals("{\\i hallo}",layout.format("\\emph{hallo}"));
  Assert.assertEquals("{\\i hallo}",layout.format("{\\emph hallo}"));
  Assert.assertEquals("{\\i hallo}",layout.format("\\textit{hallo}"));
  Assert.assertEquals("{\\i hallo}",layout.format("{\\textit hallo}"));
  Assert.assertEquals("{\\b hallo}",layout.format("\\textbf{hallo}"));
  Assert.assertEquals("{\\b hallo}",layout.format("{\\textbf hallo}"));
}
