{
  StringBuilder sb=new StringBuilder();
  if (al.size() > number) {
    AuthorList.Author a=al.getAuthor(number);
    if ((a.getVon() != null) && (a.getVon().length() > 0)) {
      String von=a.getVon();
      sb.append(von);
      sb.append(' ');
    }
    sb.append(a.getLast());
  }
  return sb.toString();
}
