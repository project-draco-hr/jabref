{
  this.frame=frame;
  putValue(SMALL_ICON,operation.getIcon());
  putValue(NAME,operation.getName());
  putValue(SHORT_DESCRIPTION,operation.getTooltip());
  if (operation.getKeyStrokeName() != null)   putValue(ACCELERATOR_KEY,Globals.prefs.getKey(operation.getKeyStrokeName()));
  this.operation=operation;
}
