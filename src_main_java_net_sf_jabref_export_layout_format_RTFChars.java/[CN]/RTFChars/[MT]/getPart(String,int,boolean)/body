{
  char c;
  int count=0;
  StringBuffer part=new StringBuffer();
  loop:   while ((count >= 0) && (i < text.length())) {
    i++;
    c=text.charAt(i);
switch (c) {
case '}':
      count--;
    break;
case '{':
  count++;
break;
case ' ':
if (commandNestedInBraces) {
break loop;
}
break;
}
part.append(c);
}
String res=part.toString();
return new IntAndString(part.length(),format(res));
}
