{
  String text=textComp.getText();
  popup.setVisible(false);
  popup.setPopupSize(textComp.getWidth(),200);
  if (autoCompleter == null)   return;
  if (textComp.isEnabled() && renderer.updateListData(autoCompleter.complete(text))) {
    renderer.selectAutoCompleteTerm(text);
    popup.show(textComp,0,textComp.getHeight());
  }
 else   popup.setVisible(false);
  if (!textComp.hasFocus())   textComp.requestFocusInWindow();
}
