{
  File f;
  if (newFile.isSelected()) {
    if (newNameTf.getText().length() > 0) {
      f=new File(newNameTf.getText());
      return (!f.exists() || (JOptionPane.showConfirmDialog(this,"'" + f.getName() + "' "+ Globals.lang("exists. Overwrite file?"),Globals.lang("Store journal abbreviations"),JOptionPane.OK_CANCEL_OPTION) == JOptionPane.OK_OPTION));
    }
 else {
      if (tableModel.getRowCount() > 0) {
        JOptionPane.showMessageDialog(this,Globals.lang("You must choose a file name to store journal abbreviations"),Globals.lang("Store journal abbreviations"),JOptionPane.ERROR_MESSAGE);
        return false;
      }
 else {
        return true;
      }
    }
  }
  return true;
}
