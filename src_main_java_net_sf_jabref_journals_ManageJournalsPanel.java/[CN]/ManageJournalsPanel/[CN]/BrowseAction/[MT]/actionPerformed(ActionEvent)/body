{
  String chosen;
  if (dir)   chosen=FileDialogs.getNewDir(frame,new File(comp.getText()),Globals.NONE,JFileChooser.OPEN_DIALOG,false);
 else   chosen=FileDialogs.getNewFile(frame,new File(comp.getText()),Globals.NONE,JFileChooser.OPEN_DIALOG,false);
  if (chosen != null) {
    File newFile=new File(chosen);
    comp.setText(newFile.getPath());
  }
}
