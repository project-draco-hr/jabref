{
  File root=new File("C:\\");
  File[] dirs=root.listFiles(new FileFilter(){
    public boolean accept(    File file){
      return file.isDirectory();
    }
  }
);
  for (int i=0; i < dirs.length; i++) {
    File dir=dirs[i];
    if (dir.getName().toLowerCase().equals("program files"))     return dir;
  }
  return null;
}
