{
  boolean found=false;
  if (fields != null) {
    for (    String field : fields) {
      try {
        if (bibtexEntry.getField(field) != null) {
          if (prefs.getBoolean("caseSensitiveSearch")) {
            if (bibtexEntry.getField(field).contains(searchString))             found=true;
          }
 else {
            if (bibtexEntry.getField(field).toLowerCase().contains(searchString.toLowerCase()))             found=true;
          }
          if (found) {
            hitInField=field;
            return true;
          }
        }
      }
 catch (      Throwable t) {
        System.err.println("Searching error: " + t);
      }
    }
  }
  return false;
}
