{
  Font font=getFont();
  String styleString;
switch (font.getStyle()) {
case Font.PLAIN:
    styleString=PLAIN;
  break;
case Font.BOLD:
styleString=BOLD;
break;
case Font.ITALIC:
styleString=ITALIC;
break;
case Font.BOLD | Font.ITALIC:
styleString=BOLD_ITALIC;
break;
default :
styleString="UNKNOWN!!!???";
break;
}
setText(font.getFamily() + " " + font.getSize()+ " "+ styleString);
}
