{
  System.err.println("ANTLR Parser Generator   Version " + Tool.version + "   1989-2000 jGuru.com");
  try {
    if (args.length == 0) {
      help();
    }
    Tool theTool=new Tool();
    theTool.doEverything(args);
    theTool=null;
  }
 catch (  Exception e) {
    System.err.println(System.getProperty("line.separator") + System.getProperty("line.separator"));
