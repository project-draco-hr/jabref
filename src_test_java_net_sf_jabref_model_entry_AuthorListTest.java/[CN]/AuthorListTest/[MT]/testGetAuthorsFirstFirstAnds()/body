{
  Assert.assertEquals("John Smith",AuthorList.getAuthors("John Smith").getAsFirstLastNamesWithAnd());
  Assert.assertEquals("John Smith and Peter Black Brown",AuthorList.getAuthors("John Smith and Black Brown, Peter").getAsFirstLastNamesWithAnd());
  Assert.assertEquals("John von Neumann and John Smith and Peter Black Brown",AuthorList.getAuthors("John von Neumann and John Smith and Black Brown, Peter").getAsFirstLastNamesWithAnd());
  Assert.assertEquals("First von Last, Jr. III",AuthorList.getAuthors("von Last, Jr. III, First").getAsFirstLastNamesWithAnd());
}
