{
  Assert.assertEquals("Smith, John",AuthorList.getAuthors("John Smith").getAsLastFirstNamesWithAnd(false));
  Assert.assertEquals("Smith, John and Black Brown, Peter",AuthorList.getAuthors("John Smith and Black Brown, Peter").getAsLastFirstNamesWithAnd(false));
  Assert.assertEquals("von Neumann, John and Smith, John and Black Brown, Peter",AuthorList.getAuthors("John von Neumann and John Smith and Black Brown, Peter").getAsLastFirstNamesWithAnd(false));
  Assert.assertEquals("von Last, Jr, First",AuthorList.getAuthors("von Last, Jr ,First").getAsLastFirstNamesWithAnd(false));
  Assert.assertEquals("Smith, J.",AuthorList.getAuthors("John Smith").getAsLastFirstNamesWithAnd(true));
  Assert.assertEquals("Smith, J. and Black Brown, P.",AuthorList.getAuthors("John Smith and Black Brown, Peter").getAsLastFirstNamesWithAnd(true));
  Assert.assertEquals("von Neumann, J. and Smith, J. and Black Brown, P.",AuthorList.getAuthors("John von Neumann and John Smith and Black Brown, Peter").getAsLastFirstNamesWithAnd(true));
  Assert.assertEquals("von Last, Jr, F.",AuthorList.getAuthors("von Last, Jr ,First").getAsLastFirstNamesWithAnd(true));
}
