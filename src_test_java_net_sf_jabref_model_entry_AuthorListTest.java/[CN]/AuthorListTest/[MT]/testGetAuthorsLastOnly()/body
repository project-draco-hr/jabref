{
  Assert.assertEquals("",AuthorList.getAuthors("").getAsLastNames(false));
  Assert.assertEquals("Smith",AuthorList.getAuthors("John Smith").getAsLastNames(false));
  Assert.assertEquals("Smith",AuthorList.getAuthors("Smith, Jr, John").getAsLastNames(false));
  Assert.assertEquals("von Neumann, Smith and Black Brown",AuthorList.getAuthors("John von Neumann and John Smith and Black Brown, Peter").getAsLastNames(false));
  Assert.assertEquals("",AuthorList.getAuthors("").getAsLastNames(true));
  Assert.assertEquals("Smith",AuthorList.getAuthors("John Smith").getAsLastNames(true));
  Assert.assertEquals("Smith",AuthorList.getAuthors("Smith, Jr, John").getAsLastNames(true));
  Assert.assertEquals("von Neumann, Smith, and Black Brown",AuthorList.getAuthors("John von Neumann and John Smith and Black Brown, Peter").getAsLastNames(true));
  Assert.assertEquals("von Neumann and Smith",AuthorList.getAuthors("John von Neumann and John Smith").getAsLastNames(false));
}
