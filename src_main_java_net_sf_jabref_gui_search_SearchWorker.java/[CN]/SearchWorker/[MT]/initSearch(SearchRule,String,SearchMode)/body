{
  this.rule=rule;
  if (this.query.equals(query) && this.mode == SearchMode.Incremental) {
    incSearchPos++;
  }
  this.query=query;
  if (this.mode != mode) {
    this.mode=mode;
    restart();
  }
  LogFactory.getLog(SearchWorker.class).debug("Search (" + this.mode.getDisplayName() + "): "+ this.query+ " at "+ incSearchPos);
}
