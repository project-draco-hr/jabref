{
  String className=null;
  while (!path.equals(basePath)) {
    className=path.getName() + (className == null ? "" : "." + className);
    path=path.getParentFile();
  }
  if (className != null) {
    int lastDot=className.lastIndexOf('.');
    if (lastDot < 0) {
      return className;
    }
    className=className.substring(0,lastDot);
  }
  return className;
}
